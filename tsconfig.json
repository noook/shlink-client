{
  "compilerOptions": {
    "target": "ES2015",
    "module": "ES2020",
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./lib/esm",
    "lib": [
      "ESNext",
      "DOM",
      "ES2018.Promise",
      "ES2015.Iterable"
    ]
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "node_modules"
  ],
  "watchOptions": {
    "watchFile": "useFsEvents",
    "watchDirectory": "useFsEvents",
    "fallbackPolling": "dynamicPriority"
  }
}
